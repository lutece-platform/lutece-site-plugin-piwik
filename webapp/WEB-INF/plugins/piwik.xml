<?xml version="1.0" encoding="UTF-8"?>
<plug-in>
    <name>piwik</name>
    <class>fr.paris.lutece.portal.service.plugin.PluginDefaultImplementation</class>
    <version>1.0.0</version>
    <documentation></documentation>
    <installation></installation>
    <changes></changes>
    <user-guide></user-guide>
    <description>piwik.plugin.description</description>
    <provider>piwik.plugin.provider</provider>
    <provider-url>http://dev.lutece.paris.fr</provider-url>
    <icon-url>images/admin/skin/plugins/piwik/piwik.png</icon-url>
    <copyright>Copyright (c) 2015 City of Paris</copyright>
    <db-pool-required>0</db-pool-required>
    
    <core-version-dependency>
        <min-core-version>5.0.0</min-core-version>
        <max-core-version/>	
    </core-version-dependency>

    <!-- Admin features parameters -->
    <admin-features>
        <admin-feature>
            <feature-id>PIWIK_MANAGEMENT</feature-id>
            <feature-title>piwik.adminFeature.ManagePiwik.name</feature-title>
            <feature-description>piwik.adminFeature.ManagePiwik.description</feature-description>
            <feature-level>2</feature-level>
            <feature-url>jsp/admin/plugins/piwik/Piwik.jsp</feature-url>
            <feature-icon-url></feature-icon-url>
      </admin-feature>
    </admin-features>    

    <!-- Page Include Service -->
    <page-include-services>
        <page-include-service>
            <page-include-service-id>piwik.include.analytics.service.name</page-include-service-id>
            <page-include-service-class>fr.paris.lutece.plugins.piwik.web.PiwikInclude</page-include-service-class>
        </page-include-service>
    </page-include-services>

</plug-in>